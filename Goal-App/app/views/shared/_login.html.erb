<% action = new_user ? users_url : session_url %>

<form class="login" action="<%= action %>" method="post">
  <%= auth_input %>
  <label for="username_input">User Name</label>
    <input type="text" id="username_input" name="user[username]" value="<%= @user.username %>">
  <br>
    <label for="password_input">Password</label>
    <input type="password" id="password_input" name="user[password]">
  <br>
    <input type="submit" value="Submit">
</form>
